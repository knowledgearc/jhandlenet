<?xml version="1.0" encoding="UTF-8"?>
<project name="JSolrSearch Example Plugin" default="" basedir=".">
    <property name="dest.plugins.jhandlenet.dspace" value="${dest.plugins}/jhandlenet/dspace"/>
    
    <target name="update" description="Copies JHandleNet DSpace plugin to existing Joomla install.">
        <echo message="Deploying JHandleNet DSpace plugin to Joomla! environment."/>
        <copy todir="${dest.plugins.jhandlenet.dspace}">
            <fileset dir="${src}" defaultexcludes="true">
                <include name="**"/>
                <exclude name="**/language/**"/>
            </fileset>
        </copy>
        <copy todir="${dest.administrator.languages}">
            <fileset dir="${src}/language" defaultexcludes="true">
                <include name="**/**"/>
            </fileset>
        </copy>
    </target>
    
    <target name="package" description="Creates a JHandleNet DSpace plugin package.">
        <echo message="Packaging JHandleNet DSpace plugin."/>
        <zip destfile="${package.dest}/plg_jhandlenet_dspace.zip"
               basedir="${src}"
               update="true"
               excludes="build*.xml"/>
    </target>
</project>