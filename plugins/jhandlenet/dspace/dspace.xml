                    name="endpoint"
                    type="text"
                    class="inputbox"
                    label="COM_JHANDLE_PREFIX_ARCHIVE_ENDPOINT_LABEL"
                    description="COM_JHANDLE_PREFIX_ARCHIVE_ENDPOINT_DESC"
