                <field
                    name="username"
                    type="text"
                    class="inputbox"
                    label="COM_JHANDLE_PREFIX_ARCHIVE_USERNAME_LABEL"
                    description="COM_JHANDLE_PREFIX_ARCHIVE_USERNAME_DESC"
                    required="false"/>

                <field
                    name="password"
                    type="password"
                    class="inputbox"
                    label="COM_JHANDLE_PREFIX_ARCHIVE_PASSWORD_LABEL"
